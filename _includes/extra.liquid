<div class="extra">
  {% if site.extra != blank %}
    {% assign extra_size = site.extra | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.extra.scrollable and extra_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign extra = site.extra | reverse %}
        {% if include.limit and page.extra.limit %}
          {% assign extra_limit = page.extra.limit %}
        {% else %}
          {% assign extra_limit = extra_size %}
        {% endif %}
        {% for item in extra limit: extra_limit %}
          <tr>
          <th scope="row" style="width: 20%">
            {% if item.date_end %}
              {{ item.date | date: '%Y' }} â€“ {{ item.date_end | date: '%Y' }}
            {% else %}
              {{ item.date | date: '%Y' }}
            {% endif %}
          </th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="extra-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No extra so far...</p>
  {% endif %}
</div>
